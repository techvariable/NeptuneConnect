<!DOCTYPE html>
<html dir="ltr" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0"
    />
    <title>Neptune Connect</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- <script src="https://cdn.tailwindcss.com"></script> -->

    <link rel="stylesheet" href="/public/assets/css/style.css" />
    <link rel="stylesheet" href="/public/components/build/neptune.css" />

    <script type="module" src="/public/components/build/neptune.esm.js"></script>
    <script nomodule src="/public/components/build/neptune.js"></script>
    <style>
      .top-100 {
        top: 100%;
      }
      .bottom-100 {
        bottom: 100%;
      }
      .max-h-select {
        max-height: 300px;
      }

      .grid-cols-4 {
        grid-template-columns: repeat(4, minmax(0, 1fr));
      }
    </style>
  </head>

  <body
    class="selection:bg-indigo-200 selection:text-violet-800 relative font-roboto h-screen bg-white"
  >
    <% if(mode==='demo'){ %>
    <banner-component></banner-component>
    <% } %>
    <fluid-container>
      <nav-bar stringifieduser="<%= user %>" imgurl="<%=imgurl%>"></nav-bar>
      <div class="container mx-auto mt-8 pb-16">
        <div class="flex justify-between items-center">
          <h2 class="font-mono text-lg font-bold leading-7 text-gray-600 text-center">All Users</h2>
          <dialog-component
            url="/api/users/invite/"
            permissions="<%= JSON.stringify(permissions) %>"
          ></dialog-component>
        </div>
        <all-users
          users="<%= JSON.stringify(users) %>"
          url="<%=url%>"
          permissions="<%= JSON.stringify(permissions) %>"
          count="<%= count %>"
          limitbackend="<%= limit %>"
          offsetbackend="<%= offset %>"
        />
      </div>
    </fluid-container>
    <script src="/public/scripts/settingScript.js"></script>
  </body>
</html>
