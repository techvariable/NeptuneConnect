<!DOCTYPE html>
<html dir="ltr" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0"
    />
    <title>Neptune Connect</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- <script src="https://cdn.tailwindcss.com"></script> -->

    <link rel="stylesheet" href="/public/assets/css/style.css" />
    <link rel="stylesheet" href="/public/components/build/neptune.css" />

    <script type="module" src="/public/components/build/neptune.esm.js"></script>
    <script nomodule src="/public/components/build/neptune.js"></script>
  </head>

  <body
    class="selection:bg-indigo-200 selection:text-violet-800 relative font-roboto h-screen bg-white"
  >
    <% if(mode==='demo'){ %>
    <banner-component></banner-component>
    <% } %>
    <fluid-container>
      <nav-bar stringifieduser="<%= user %>" imgurl="<%= imgurl%>"></nav-bar>
      <div class="container mx-auto md:flex gap-4 mt-4">
        <div class="w-full gap-4">
          <h2 class="font-mono text-lg font-bold leading-7 text-gray-600">User Details</h2>
          <user-details-component stringifieduser="<%= details %>"></user-details-component>
          <h2 class="pb-2 font-mono text-lg font-bold leading-7 text-gray-600">
            Aggregated Permissions
          </h2>
          <permission-table
            permissionstring="<%= JSON.stringify(combinedpermissions) %>"
          ></permission-table>
          <h2 class="mt-4 pb-2 font-mono text-lg font-bold leading-7 text-gray-600">
            Last 50 logs
          </h2>
          <last-logs
            url="<%= url%>"
            permissions="<%= JSON.stringify(permissions) %>"
            user="<%= useremail %>"
          ></last-logs>
        </div>
      </div>
    </fluid-container>
    <script src="/public/scripts/settingScript.js"></script>
  </body>
</html>
